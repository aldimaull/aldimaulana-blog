---
import Badge from "../components/Badge.astro";

const { title, coverPhoto, date, author } = Astro.props;
---

<div class="grid xl:grid-cols-2 gap-2 p-2">
 <div
  class="bg-surface-container-light dark:bg-surface-lowest-dark xl:h-[544px] md:p-12 p-6 flex flex-col justify-center break-words rounded-3xl"
 >
  <h6
   class="font-normal text-on-surface-variant-light dark:text-on-surface-variant-dark/50 text-sm sm:text-md md:text-lg lg:text-xl xl:text-2xl"
  >
   {date}
  </h6>
  <h1
   class="font-bold text-on-surface-light dark:text-on-surface-dark text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl my-4 font-display"
  >
   {title}
  </h1>
  <h5
   class="font-normal text-on-surface-light dark:text-on-surface-dark text-md sm:text-lg md:text-xl lg:text-2xl xl:text-3xl"
  >
   {author}
  </h5>
 </div>
 <div
  class="h-80 md:h-[544px] overflow-hidden w-full bg-center bg-cover bg-no-repeat rounded-3xl bg-surface-light dark:bg-surface-dark"
  style={{
   backgroundImage: `url(${coverPhoto})`,
  }}
 >
 </div>
</div>
